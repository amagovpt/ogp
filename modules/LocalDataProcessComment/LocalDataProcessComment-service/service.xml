<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="AMA.OpenGov">
	<namespace>ogp</namespace>
	<entity local-service="true" name="comments" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="id" primary="true" type="long" />

		<!-- Group instance -->

		<column name="nome" type="String" />

		<!-- Audit fields -->

		<column name="email" type="String" />
		<column name="mensagem" type="String" />
		<column name="status" type="boolean" />

		<!-- Other fields -->

		<!-- Order -->

		<order by="asc">
			<order-column name="id" />
		</order>

		<!-- Finder methods -->

		<finder name="id" return-type="Collection">
			<finder-column name="nome" />
		</finder>
		
	</entity>
</service-builder>